<%
getCurrentForecast = function (status) {
    status = parseInt(status)
    switch (status) {
        case 0:
            return {icon: "/public/img/weather/256/partly_cloudy.png", text: "Partly Cloudy"};
        case 1:
            return {icon: "/public/img/weather/256/sunny.png", text: "Sunny"};
        case 2:
            return {icon: "/public/img/weather/256/cloudy.png", text: "Cloudy"};
        case 3:
            return {icon: "/public/img/weather/256/rain.png", text: "Rainy"};
        case 4:
            return {icon: "/public/img/weather/256/snow.png", text: "Snowy"};
        default:
            return {
                icon: "/public/img/weather/256/cloudy.png",
                text: "Error getting forecast"
            };
    }
}

getDay = function (timestamp){
    var date = new Date(timestamp*1000);
    var day = date.getDay();
    switch (day){
        case 0:
            return "Sun";
        case 1:
            return "Mon";
        case 2:
            return "Tue";
        case 3:
            return "Wed";
        case 4:
            return "Thu";
        case 5:
            return "Fri";
        case 6:
            return "Sat";
    }
}

getForecast = function (status) {
    switch (status.toLowerCase()) {
        case "clear-day":
            return {icon: "/public/img/weather/svg/Sun.svg", text: "Clear Day"};

        case "clear-night":
            return {icon: "/public/img/weather/svg/Moon.svg", text: "Clear Night"};

        case "rain":
            return {icon: "/public/img/weather/svg/Cloud-Rain.svg", text: "Rain"};

        case "snow":
            return {icon: "/public/img/weather/svg/Cloud-Snow.svg", text: "Snow"};

        case "sleet":
            return {icon: "/public/img/weather/svg/Cloud-Snow.svg", text: "Sleet"};

        case "wind":
            return {icon: "/public/img/weather/svg/Wind.svg", text: "Wind"};

        case "fog":
            return {icon: "/public/img/weather/svg/Cloud-Fog.svg", text: "Fog"};

        case "cloudy":
            return {icon: "/public/img/weather/svg/Cloud.svg", text: "Cloudy"};

        case "partly-cloudy-day":
            return {icon: "/public/img/weather/svg/Cloud-Sun.svg", text: "Partly Cloudy"};

        case "partly-cloudy-night":
            return {icon: "/public/img/weather/svg/Cloud-Moon.svg", text: "Partly Cloudy"};
    }
}
