{{#> layouts/default}}
    {{#*inline "content-block"}}
        <div class="container">
            <main class="col">
                <!--<input placeholder="Search, or say Google" x-webkit-speech class="mx-auto" autocomplete="off" />-->
                <header></header>
                <section class="card" id="weather-card">
                    <div v-if="error">
                        <div class="alert alert-danger" role="alert">Location ID error</div>
                    </div>
                    <div v-else="" id="display">
                        <div id="top">
                            <!--<div class="location">%( location %)</div>-->
                            <div class="location">%( displayDate %)</div>
                            <div class="time">%( getForecast(status, 64).text %)</div>
                        </div>

                        <div id="left-information">
                            <img :src="getForecast(status, 64).icon" :alt="status" class="thumbnail"/>
                            <div class="temperature">%( temperature %)</div>
                            <div class="unit">&deg;C</div>
                        </div>

                        <div id="right-information">
                            <span>Humidity: %( humidity %) %</span><br/>
                            <span>Pressure: %( pressure %) hPa</span><br/>
                            <span>Wind speed: %( wind %) km/h</span>
                        </div>

                        <div id="forecast">
                            <ul>
                                <li v-for="(f, i) in forecast" v-if="i < 8">
                                    <div>%( f.day %)</div>
                                    <img :src="getThumbnail(f.text, 48)" :alt="f.text"/>
                                    <b>%( f.high %)°</b> %( f.low %)°
                                </li>
                            </ul>
                        </div>
                    </div>
                </section>
                <section class="card">
                    <div class="row">
                        <div class="col text-center">
                            <h5><strong>Temperature</strong></h5>
                            <span>Min: {{data.minTemp}}&deg;c</span><br>
                            <span>Max: {{data.maxTemp}}&deg;c</span>
                        </div>
                        <div class="col text-center">
                            <h5><strong>Humidity</strong></h5>
                            <span>Min: {{data.minHumid}}%</span><br>
                            <span>Max: {{data.maxHumid}}%</span>
                        </div>
                    </div>
                </section>
                <section class="card">
                    <h1><strong>Weather Graphs</strong></h1>
                    <h2>Historical weather data displayed in graphs here</h2>
                </section>
            </main>
        </div>
    {{/inline}}
{{/layouts/default}}
